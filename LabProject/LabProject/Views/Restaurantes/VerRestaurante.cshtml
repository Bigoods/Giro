@model LabProject.Models.RestaurantePratos

    <link rel="stylesheet" href="~/css/Grid_style.css">


    <div>
        <h4>@Html.DisplayNameFor(model => model.Restaurante.Utilizador.Name)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurante.Telefone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurante.Telefone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurante.Morada)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurante.Morada)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurante.HoraAbertura)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurante.HoraAbertura)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurante.HoraFecho)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurante.HoraFecho)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurante.DiaDescanso)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurante.DiaDescanso)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurante.Utilizador)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurante.Utilizador.Email)
            </dd>
        </dl>


        @foreach (var item in Model.Pratos)
        {
            <div class="GridSquare" onClick="reply_click(@Html.DisplayFor(modelItem => item.Id))">
                <div class="GridSquareImagem" style='background-image:url(@Html.DisplayFor(modelItem => item.Foto))'></div>
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a>*@

                <div class="GridSquareNome">@Html.DisplayFor(modelItem => item.Nome)</div>

            </div>

        }

    </div>

