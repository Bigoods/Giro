                        <a tabindex="-1" id="NavegarBar" class="sidebar-tab noselect" asp-area="" asp-controller="Restaurantes" asp-action="ListarRestaurantesPro"><i class="fas fa-map-marked-alt fonticon"></i>Aprovar Restaurantes</a>
