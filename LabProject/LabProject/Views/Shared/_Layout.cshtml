                        <a tabindex="-1" id="PerfilBar" class="sidebar-tab noselect" asp-area="" asp-controller="Restaurantes" asp-action="EditRes"><i class="fas fa-id-badge fonticon"></i>Criar Administradores</a>
                        <a tabindex="-1" id="LogoutBar" class="sidebar-tab noselect" asp-area="" asp-controller="Utilizador" asp-action="Logout"><i class="fas fa-id-badge fonticon"></i>Logout</a>

                    }
                }
                }
            </div>

        </div>

        <div class="flex-child Container" role="main">

            @RenderBody()

        </div>

    </div>





    @RenderSection("Scripts", required: false)
</body>
</html>


