@model LabProject.Models.Utilizador

    <link rel="stylesheet" href="~/css/login_style.css">

<div>
    <hr />
    <div class="row">
        
        <div class="col-md-4">
            <p class="login-titulo" style="">Tem a certeza que pertende bloquear este utilizador?</p>
            <form asp-action="Delete" class="login-form">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Imagem):
                    @Html.DisplayFor(model => model.Imagem)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Username):
                    @Html.DisplayFor(model => model.Username)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Email):
                    @Html.DisplayFor(model => model.Email)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Motivo)
                </div>
                <div class="form-group">
                    <textarea class="form-control" asp-for="Motivo" cols="40" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" value="Confirmar" class="button" style="color:white; background-color: green;">Confirmar</button>
                    <a asp-action="VerUtilizadores" class="button">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

