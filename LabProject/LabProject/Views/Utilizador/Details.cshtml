@model LabProject.Models.Utilizador

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/login_style.css">


<div>
   
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <h4>Perfil do Utilizador</h4>
            </div>
            <div class="form-group">
                <img src="~/Images/Utilizadores/@Html.DisplayFor(model => model.Imagem)" width="250" height="250" />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Name):
                @Html.DisplayFor(model => model.Name)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Email):
                @Html.DisplayFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Username):
                @Html.DisplayFor(model => model.Username)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Password):
                @Html.DisplayFor(model => model.Password)
            </div>
            <div class="form-group">
                <label>
                    @Html.DisplayNameFor(model => model.Bloqueado):
                    @Html.DisplayFor(model => model.Bloqueado)
                </label>
            </div>
            @if (Model.Bloqueado == true)
            {
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Motivo):
                    @Html.DisplayFor(model => model.Motivo)
                </div>
            }
            <div class="form-group">
                <label>
                    @Html.DisplayNameFor(model => model.Notificacao):
                    @Html.DisplayFor(model => model.Notificacao)
                </label>
            </div>
            <div class="form-group">
                <a asp-action="VerUtilizadores" class="button">Voltar</a>
            </div>
        </div>
    </div>
</div>

